use BBS;
create table topic (id int not null,
                   name varchar(300) not null,
                   primary key(id)
                   ) engine=InnoDB;
create table comment (id int not null,
                     number int not null,
                     content varchar(4000),
                     topic int not null,
                     primary key(id),
                     foreign key(topic) references topic(id)
                     ) engine=InnoDB;
